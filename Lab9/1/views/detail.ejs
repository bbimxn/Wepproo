<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            padding: 50px;
        }

        .detail-header {
            font-weight: bold;
            font-size: 32px;
            margin-bottom: 30px;
        }

        .info-row {
            margin-bottom: 15px;
            font-size: 18px;
        }

        .label {
            font-weight: bold;
            width: 120px;
            display: inline-block;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="detail-header">User Details</div>

        <div class="info-row"><span class="label">ID:</span>
            <%= user.id %>
        </div>
        <div class="info-row"><span class="label">First Name:</span>
            <%= user.first_name %>
        </div>
        <div class="info-row"><span class="label">Last Name:</span>
            <%= user.last_name %>
        </div>
        <div class="info-row"><span class="label">Username:</span>
            <%= user.username %>
        </div>
        <div class="info-row"><span class="label">Email:</span>
            <%= user.email %>
        </div>

        <a href="/" class="btn btn-link p-0 mt-4 text-decoration-line">Back to Users List</a>
    </div>
</body>

</html>